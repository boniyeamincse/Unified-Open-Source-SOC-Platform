# Step 1: Copy this file → cp .env.example .env
# Step 2: Change ALL passwords below to secure values
# Step 3: Run → sudo bash deploy.sh deploy

# ── Global Settings ──────────────────────────────────────
PROJECT_NAME=soc-platform
DOMAIN=soc.local
TIMEZONE=UTC
WAZUH_VERSION=4.7.2

# ── Keycloak SSO (Phase 2) ───────────────────────────────
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_keycloak_admin
KEYCLOAK_DB_PASSWORD=CHANGE_ME_keycloak_db
KEYCLOAK_SOC_ADMIN_PASSWORD=CHANGE_ME_keycloak_soc
KEYCLOAK_THEHIVE_SECRET=CHANGE_ME_thehive_oidc
KEYCLOAK_MISP_SECRET=CHANGE_ME_misp_oidc
KEYCLOAK_WAZUH_SECRET=CHANGE_ME_wazuh_oidc
KEYCLOAK_CORTEX_SECRET=CHANGE_ME_cortex_oidc
KEYCLOAK_SHUFFLE_SECRET=CHANGE_ME_shuffle_oidc

# ── Wazuh Settings ───────────────────────────────────────
WAZUH_MANAGER_IP=127.0.0.1
WAZUH_PASSWORD=CHANGE_ME_wazuh_password

# ── OpenSearch Settings ──────────────────────────────────
OPENSEARCH_INITIAL_ADMIN_PASSWORD=CHANGE_ME_opensearch_admin

# ── MISP Settings ────────────────────────────────────────
MISP_BASEURL=https://misp.soc.local
MISP_ADMIN_EMAIL=admin@admin.test
MISP_ADMIN_PASSPHRASE=CHANGE_ME_misp_admin
MISP_DB_PASSWORD=CHANGE_ME_misp_db
MISP_ZMQ_PASSWORD=CHANGE_ME_misp_zmq

# ── TheHive & Postgres Settings ──────────────────────────
THEHIVE_SECRET=CHANGE_ME_thehive_secret
POSTGRES_PASSWORD=CHANGE_ME_postgres_password

# ── Cortex Settings ──────────────────────────────────────
CORTEX_API_KEY=CHANGE_ME_cortex_api_key
CORTEX_SECRET=CHANGE_ME_cortex_secret

# ── OpenVAS / Greenbone Settings ─────────────────────────
GVMD_PASSWORD=CHANGE_ME_openvas_password

# ── Shuffle Settings ─────────────────────────────────────
SHUFFLE_API_KEY=CHANGE_ME_shuffle_api_key

# ── Redis Settings ───────────────────────────────────────
REDIS_PASSWORD=CHANGE_ME_redis_password

# ── Webhook HMAC Secret ──────────────────────────────────
WEBHOOK_HMAC_SECRET=CHANGE_ME_webhook_hmac

# ── Slack / Email Notifications ──────────────────────────
SLACK_WEBHOOK_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
